{
    "manifest_version": 3,
    "name": "Fırsat Avcısı - AI Automation",
    "version": "1.0.0",
    "description": "Gemini AI ile desteklenen web otomasyonu eklentisi",
    
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "webNavigation",
        "background"
    ],
    
    "host_permissions": [
        "http://localhost:5000/*",
        "https://*/*",
        "http://*/*"
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "Fırsat Avcısı"
    },
    
    "sidebar_action": {
        "default_title": "Fırsat Avcısı",
        "default_panel": "sidebar.html"
    },
    
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}

